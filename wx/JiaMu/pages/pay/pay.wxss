/* pages/pay/pay.wxss */
@import "../address/address.wxss";
page
{
  background-color: white;
  width:100%;
}

.teaPhoto
{
  height:90%!important;
}

.cart-info
{
  height: 220rpx;
	width: 100%;
  padding: 0rpx 30rpx;
  border-bottom: solid 1rpx #e6d9d1;
  margin-bottom:20rpx;
}

.order-box
{
  border-bottom: solid 1rpx #e6d9d1;
  border-radius:20%;
  margin:20rpx 40rpx;
}

.cart-left
{
  width:30%;
  float:left;
}

.cart-right
{
  float:left;
  width:50%;
  height:100%;
  margin-right: 40rpx;

}

.taePhoto
{

}

.orderId-text
{
  padding: 40rpx 60rpx;
  font-size: 25rpx;
  color: #b3a095;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
  border-bottom: solid 1rpx #e6d9d1;
}


.drawer-name
{
  font-size: 40rpx;
  color: #666666;
  font-weight: bold;
  margin-bottom: 20rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
  
}

.drawer-text
{
  font-size: 20rpx;
  color: #666666;
  display: inline-block;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
  width: 100%;

}

.orderId-text1
{
  padding: 20rpx 60rpx;
  font-size: 25rpx;
  color: #b3a095;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
  width:100%;
}


.cart-bar
{
  position:fixed;
  bottom: 0;
  width:100%;
  height:55px;
}

.cart-bar-right
{
  width:100%;
  text-align: center;
  float:left;
  height: 100%;
  background-color: #c5a087;
  font-size: 30rpx;
  color:white;
}
.cart-bar-right-text
{
  position: absolute;
  width:100%;
  height:40rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}



.cart-top
{
  height: 90%;
  overflow: auto;

}


.address-second{
  padding: 0rpx;
  margin-top:20rpx;
}


