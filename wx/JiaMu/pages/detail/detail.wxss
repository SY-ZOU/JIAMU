/* pages/detail/detail.wxss */
page
{
  background-color: white;
  width: 100%;
  height: 100%;
}

.teaPhoto
{
  width:100%;
}

.detail-box
{
  width: 100%;
  margin: 40rpx 40rpx 40rpx 40rpx;
  
}
.detail-first
{
  overflow:auto;
  zoom:1;
}

.detail-name
{
  text-align: left;
  font-size: 50rpx;
  margin-bottom: 30rpx;
  float:left;
}

.detail-buy
{
  text-align: left;
  font-size: 50rpx;
  
  margin-right: 55px;
  float: right;

}

.detail-logo
{
  width:10%;
  border: solid 3rpx;
  float:left;
  margin-left:30rpx;
  text-align: center;
  font-size: 20rpx;
  position: relative;
  color:#c5a38c;
}

.detail-price
{
  text-align: left;
  font-size: 35rpx;
  margin-bottom: 30rpx;
}

.detail-text
{
  text-align: left;
  font-size: 20rpx;
  margin-bottom: 20rpx;
  color: #666666;
}

.text-logo-box
{
margin-top: 40rpx;
}

.text-logo
{
  font-size: 20rpx;
  color:#c5a38c;
}

.detail-info
{
  width:100%;
  border-top: solid 1rpx #d8c5b8;
  padding:20rpx 40rpx;
}

.detail-info-head
{
  font-size: 20rpx;
  margin-bottom: 20rpx;
  color: #666666;
  letter-spacing:5rpx;
}

.detail-info-body
{
  font-size: 20rpx;
  color: #666666;
  letter-spacing:5rpx;
  line-height:30rpx;
  margin-bottom: 30rpx;
}

.buy-button
{
  
  
  border-radius: 50%;
  background-color: #e6d9d1;
  color: #666666;
}

.cart-text
{
  font-size:18rpx;
  text-align: center;
  color: #666666;
}

.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  

.drawer_box_ad { 
  margin-left: 7%; 
  width: 86%; 
  overflow: hidden;  
  position: fixed;  
  top: 25%; 
  z-index: 1001;  
  background: #FFFFFF;  
  border-radius: 4px;
} 


.drawer_content_ad {  
  height: 450rpx;
  width: 100%;
  padding: 10px;
}

.drawer-name
{
  font-size: 50rpx;
  color: #666666;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: solid 1rpx #666666;
}

.drawer-text
{
  font-size: 23rpx;
  margin-bottom: 15rpx;
  color: #666666;
}

.drawer-num
{
  font-size: 50rpx;
  
}

.cart-info-num
{
  float: left;
  width: 8%;
  font-size: 40rpx;
  margin: 0 20rpx;
  text-align: center;
}

.drawer-icon
{
  float: left;
  width: 50rpx;
  font-size: 35rpx;
  border: solid 1rpx #c2aa9c;
  border-radius: 50%;
  height: 50rpx;
  text-align: center;
  color: #c2aa9c;
}

.drawer-icon-submit
{
  right:30rpx;
  float: right;
}